{% extends 'layout.html.jinja' %}

{% block head %}
<title>{{translations.accountSettings.title}}</title>
{% endblock head %}

{% block body %}
<div class="w-fit mx-auto mt-4 text-center">
  <h1>{{translations.accountSettings.title}}</h1>
  <div class="flex flex-col justify-center mt-8">
    <a href="/changeusername"
      class="my-2 hover:text-rose-500 duration-150 flex items-center w-fit mx-auto">
      <i class="ti ti-user-edit mr-1 text-2xl"></i>
      {{translations.accountSettings.changeUserName}}
    </a>
    <a href="/changepassword"
      class="my-2 hover:text-rose-500 duration-150 flex items-center w-fit mx-auto">
      <i class="ti ti-key mr-1 text-2xl"></i>
      {{translations.accountSettings.changePassword}}
    </a>
    <a href="/changeprofilepicture"
      class="my-2 hover:text-rose-500 duration-150 flex items-center w-fit mx-auto">
      <i class="ti ti-user-circle mr-1 text-2xl"></i>
      {{translations.accountSettings.changeProfilePicture}}
    </a>
    <a href="/changelanguage"
      class="my-2 hover:text-rose-500 duration-150 flex items-center w-fit mx-auto">
      <i class="ti ti-language mr-1 text-2xl"></i>
      {{translations.accountSettings.changeLanguage}}
    </a>
  </div>

  <h2 class="my-4">
    <form method="post">
      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}" />
      <button type="submit" class="hover:text-rose-500 duration-150 flex items-center w-fit mx-auto">
        <i class="ti ti-user-x mr-1 text-2xl"></i>
        {{ translations.accountSettings.delete }}
      </button>
    </form>
  </h2>
</div>
{% endblock body %}
